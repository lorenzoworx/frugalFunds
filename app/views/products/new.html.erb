<% content_for :back_path, root_path %>
<% content_for :page_name, "Transaction" %>
<% content_for :nav_button do %>
  <%= button_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>
<div class="new-product">
  <%= form_with(model: ([@group, @product])) do |form| %>
    <h1>Create Transaction</h1>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name, required: true %>
    </div>
    <div>
      <%= form.label :amount %>
      <%= form.number_field :name, required: true, min: 1 %>
    </div>
    <div>
      <%= form.label "Group" %>
      <%= form.collection_select :group_ids, current_user.groups, :id, :name, {}, { multiple: true, required: true } %>
    </div>
    <%= form.submit "Create" %>
  <% end %>
</div>