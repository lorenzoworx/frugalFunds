  </head>

  <body>
    <header>
      <%= render "shared/navbar" %>   
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>
  </body>
</html>
