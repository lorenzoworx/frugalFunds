<% content_for :back_path, root_path %>
<% content_for :page_name, "Transaction" %>
<% content_for :nav_button do %>
  <%= button_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>
<div>
  <%= render "shared/group", group: @group %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <h2> <%= product.name %> </h2>
        <p> <%= product.amount %> </p>
        <p> <%= product.created_at.strftime('%d %b %Y at %l:%M %P') %> </p>
        <p>Total</p>
      </li>
    <% end %>
  </ul>
  <%= button_to 'Add Transaction', new_group_product_path(@group), method: :get %>
</div>